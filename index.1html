<script>
    document.addEventListener("DOMContentLoaded", () => {
        // --- General UX / Navigation Script ---
        
        // Mobile menu toggle
        const menuToggle = document.getElementById('menu-toggle');
        const mobileMenu = document.getElementById('mobile-menu');
        
        menuToggle.addEventListener('click', () => {
            const isHidden = mobileMenu.classList.toggle('hidden');
            menuToggle.setAttribute('aria-expanded', !isHidden);
        });

        // Smooth scroll for navigation links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function(e) {
                const targetId = this.getAttribute('href');
                // Only prevent default if it's a local anchor link, not a full hash link that might be handled elsewhere
                if (targetId.length > 1) { 
                    e.preventDefault();
                    mobileMenu.classList.add('hidden');
                    
                    const targetElement = document.querySelector(targetId);
                    
                    if (targetElement) {
                        // Offset by 80px for the fixed header
                        window.scrollTo({
                            top: targetElement.offsetTop - 80,
                            behavior: 'smooth'
                        });
                    }
                }
            });
        });

        // Fade-in animation using Intersection Observer
        const fadeElements = document.querySelectorAll('.fade-in');
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('visible');
                    observer.unobserve(entry.target); // Stop observing once visible
                }
            });
        }, { 
            rootMargin: '0px', 
            threshold: 0.1 
        });

        fadeElements.forEach(el => observer.observe(el));

        // Add subtle shadow to navbar on scroll
        const nav = document.querySelector('nav');
        window.addEventListener('scroll', () => {
            if (window.scrollY > 10) {
                nav.classList.add('shadow-xl');
            } else {
                nav.classList.remove('shadow-xl');
            }
        });

        // --- Video Carousel & Modal Script (Refined) ---

        /**
         * Sets up the functionality for a video carousel and modal for a specific project.
         * @param {string} projectId - The data-project attribute value ('nmfm' or '15miles').
         * @param {string} modalId - The ID of the modal container.
         * @param {string} iframeId - The ID of the modal's iframe.
         * @param {string} titleId - The ID of the modal's title element.
         */
        function setupProject(projectId, modalId, iframeId, titleId) {
            const projectSection = document.querySelector(`[data-project="${projectId}"]`).closest('.bg-white');
            if (!projectSection) return;

            const modal = document.getElementById(modalId);
            const iframe = document.getElementById(iframeId);
            const modalTitle = document.getElementById(titleId);
            const closeButton = modal.querySelector('.close-modal-btn');
            const carousel = projectSection.querySelector('.video-carousel');
            const filterButtons = projectSection.querySelectorAll('.filter-btn');
            const videoContainers = projectSection.querySelectorAll('.video-container');
            const prevButton = projectSection.querySelector('.carousel-prev');
            const nextButton = projectSection.querySelector('.carousel-next');

            let lastFocusedElement = null;
            const scrollStep = 256 + 16; // w-64 (256px) + gap-4 (16px)

            // A11y: Focus Trap Function
            function trapFocus(element) {
                const focusableElements = element.querySelectorAll('button:not([disabled]), [href], input:not([disabled]), select:not([disabled]), textarea:not([disabled]), [tabindex]:not([tabindex="-1"])');
                if (focusableElements.length === 0) return;
                
                const first = focusableElements[0];
                const last = focusableElements[focusableElements.length - 1];

                element.addEventListener('keydown', function handleKey(e) {
                    if (e.key === 'Escape') {
                        closeModal();
                        e.stopPropagation();
                        return;
                    }
                    if (e.key === 'Tab') {
                        if (e.shiftKey) { // Shift + Tab
                            if (document.activeElement === first) {
                                last.focus();
                                e.preventDefault();
                            }
                        } else { // Tab
                            if (document.activeElement === last) {
                                first.focus();
                                e.preventDefault();
                            }
                        }
                    }
                }, {once: true}); // Use {once: true} and re-add in openModal if desired, or handle removal on close
                first.focus();
            }
            
            function openModal(videoId, title, triggerElement) {
                lastFocusedElement = triggerElement || document.activeElement;
                iframe.src = `https://www.youtube.com/embed/${videoId}?autoplay=1&enablejsapi=1`;
                modalTitle.textContent = title;
                modal.classList.remove('hidden');
                modal.classList.add('flex');
                // Ensure the modal is visible before trapping focus
                setTimeout(() => trapFocus(modal), 50);
            }

            function closeModal() {
                // Stop the video playback and remove source
                iframe.src = ''; 
                modal.classList.add('hidden');
                modal.classList.remove('flex');
                
                // Return focus to the element that opened the modal
                if (lastFocusedElement) {
                    lastFocusedElement.focus();
                    lastFocusedElement = null;
                }
            }
            
            // Event Listeners for Modal
            if (closeButton) closeButton.addEventListener('click', closeModal);
            if (modal) modal.addEventListener('click', (e) => {
                // Close when clicking outside the modal content (but not on the content itself)
                if (e.target === modal) closeModal();
            });
            
            // Event Listeners for Thumbnails (Open Modal)
            projectSection.querySelectorAll('.thumbnail').forEach(thumbnail => {
                thumbnail.addEventListener('click', (e) => {
                    const container = thumbnail.closest('.video-container');
                    openModal(container.dataset.videoId, container.dataset.title, e.currentTarget);
                });
                thumbnail.addEventListener('keydown', (e) => {
                    if (e.key === 'Enter' || e.key === ' ') {
                        e.preventDefault();
                        const container = thumbnail.closest('.video-container');
                        openModal(container.dataset.videoId, container.dataset.title, e.currentTarget);
                    }
                });
            });

            // Event Listeners for Filters
            filterButtons.forEach(btn => {
                btn.addEventListener('click', () => {
                    filterButtons.forEach(b => {
                        b.classList.replace('bg-blue-600', 'bg-gray-200');
                        b.classList.replace('text-white', 'text-gray-800');
                    });
                    btn.classList.replace('bg-gray-200', 'bg-blue-600');
                    btn.classList.replace('text-gray-800', 'text-white');
                    
                    const category = btn.dataset.category;
                    let firstVisibleContainer = null;

                    videoContainers.forEach(video => {
                        const isVisible = (category === 'all' || video.dataset.category === category);
                        // Use class for hidden/visible
                        if (isVisible) {
                            video.classList.remove('hidden');
                            video.style.display = 'block'; // Restore display property for flex context
                            if (!firstVisibleContainer) {
                                firstVisibleContainer = video;
                            }
                        } else {
                            video.classList.add('hidden');
                            video.style.display = 'none'; // Ensure no layout space is taken
                        }
                    });

                    // Scroll to the beginning of the filtered view
                    carousel.scrollTo({ left: 0, behavior: 'smooth' });
                    
                    // A11y: Set focus to the first visible element after filter
                    if (firstVisibleContainer) {
                        const firstThumbnail = firstVisibleContainer.querySelector('.thumbnail');
                        if (firstThumbnail) {
                            // Delay focus slightly to ensure smooth scroll finishes
                            setTimeout(() => firstThumbnail.focus(), 300); 
                        }
                    }
                });
            });
            
            // Set initial filter state
            filterButtons[0].click(); // Simulate click on 'All' button on load


            // Event Listeners for Carousel Navigation
            if (prevButton && nextButton && carousel) {
                prevButton.addEventListener('click', () => {
                    carousel.scrollBy({ left: -scrollStep, behavior: 'smooth' });
                });
                nextButton.addEventListener('click', () => {
                    carousel.scrollBy({ left: scrollStep, behavior: 'smooth' });
                });
            }
            
            // Add a single global escape listener for the current modal
            document.addEventListener('keydown', (e) => {
                if (e.key === 'Escape' && !modal.classList.contains('hidden')) {
                     closeModal();
                     e.stopPropagation(); // Prevent other escape listeners from firing
                }
            });
        }

        // Setup NMFM Project
        setupProject('nmfm', 'nmfm-video-modal', 'nmfm-modal-iframe', 'nmfm-modal-title');

        // Setup 15-Miles Project
        setupProject('15miles', 'videoModal', 'modalIframe', 'modalTitle');
        
        // --- Contact Form Submission Handler ---
        const form = document.querySelector('#contact-form form');
        const formStatus = document.getElementById('form-status');
        
        form.addEventListener('submit', async (e) => {
          e.preventDefault();
          const submitBtn = form.querySelector('button[type="submit"]');
          const originalBtnContent = submitBtn.innerHTML;
          
          // Show loading state
          submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i> Sending...';
          submitBtn.disabled = true;
          formStatus.classList.add('hidden'); // Hide previous status

          
          try {
            const response = await fetch(form.action, {
              method: 'POST',
              body: new FormData(form),
              headers: { 'Accept': 'application/json' }
            });
            
            formStatus.classList.remove('hidden', 'bg-red-100', 'text-red-700', 'bg-green-100', 'text-green-700');

            if (response.ok) {
              // Success message
              formStatus.classList.add('bg-green-100', 'text-green-700');
              formStatus.innerHTML = '<i class="fas fa-check-circle mr-2"></i>Message sent successfully! I\'ll get back to you soon.';
              form.reset();
            } else {
                // Attempt to read error message if available
                let errorText = 'Oops! Something went wrong.';
                try {
                    const data = await response.json();
                    if (data.error) {
                         errorText = data.error;
                    } else if (data.errors && data.errors.length > 0) {
                         errorText = data.errors[0].message;
                    }
                } catch(jsonError) {
                    // ignore JSON parsing error, use generic message
                }
                throw new Error(errorText);
            }
          } catch (error) {
            // Error message
            formStatus.classList.add('bg-red-100', 'text-red-700');
            formStatus.innerHTML = `<i class="fas fa-exclamation-circle mr-2"></i> ${error.message || 'Oops! Something went wrong. Please try again later.'}`;
          } finally {
            // Reset button state
            submitBtn.innerHTML = originalBtnContent;
            submitBtn.disabled = false;
          }
        });
    });
</script>
</body>
</html>
